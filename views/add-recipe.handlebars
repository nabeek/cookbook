<div class="container">
  <div class="columns is-centered has-text-centered">
    <div class="column is-6">
      Insert Image
    </div>
    <div class="column is-6">
      <h1>Enter Your Complete Recipe Below.</h1>
      
      <div class="field">
        <label class="label">Recipe Name</label>
        <div class="control">
          <input id="recipe-name" class="input" type="text" placeholder="Name...">
        </div>
      </div>
      
      <div class="field">
        <label class="label">Recipe Description</label>
        <div class="control">
          <textarea id="recipe-description" class="textarea" type="text" placeholder="Enter a short description..." value=""></textarea>
        </div>
      </div>
      
      <label class="label">Ingredients</label>
      <div class="field columns is-grouped">
        <div class="control column">
          <label class="label is-small">Qty</label>
          <input id="ing-qty" class="input" type="input">
        </div>
        <div class="control column">
          <label class="label is-small">Measurement</label>
          <div class="select">
            <select id="ing-measurement">
              <option>cups</option>
              <option>lbs</option>
              <option>oz</option>
              <option>pinch</option>
              <option>pints</option>
              <option>quarts</option>
              <option>tsp</option>
              <option>tbsp</option>
            </select>
          </div>
        </div>
        <div class="control column">
          <label  class="label is-small">Ingredient Name</label>
          <input id="ing-name" class="input" type="input">
        </div>
      </div>
      
      <div class="field">
        <label class="label">Instructions</label>
        <div class="control">
          <textarea id="instructions" class="textarea" placeholder="Step by step instructions..."></textarea>
        </div>
      </div>

      <div class="columns is-grouped">
        <div class="column field">
          <div class="file">
              <input class="file-input" type="file" name="resume">
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Upload Imageâ€¦
                </span>
              </span>
            </label>
          </div>
        
        </div>
        <div class="column field">
          <div class="control">
            <button id="recipe-submit" class="button is-link">Submit</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>